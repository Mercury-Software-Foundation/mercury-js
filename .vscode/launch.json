{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests.v2.mercury-js",
            "request": "launch",
            "args": [
                "--watch",
                "--runInBand",
                "--watchAll=false",
                "--testNamePattern",
                "${jest.testNamePattern}",
                "--runTestsByPath",
                "${jest.testFile}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node-modules/bin/jest"
        }
    ]
}